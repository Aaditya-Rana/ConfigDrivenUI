{
    "collectionName": "components_shared_transitions",
    "info": {
        "displayName": "Transition",
        "icon": "arrow-right",
        "description": "Rule to determine the next screen"
    },
    "options": {},
    "attributes": {
        "conditions": {
            "type": "component",
            "repeatable": true,
            "component": "shared.condition"
        },
        "type": {
            "type": "enumeration",
            "enum": [
                "AND",
                "OR"
            ],
            "default": "AND"
        },
        "targetScreen": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::screen.screen"
        }
    }
}