HOST=0.0.0.0
PORT=1337

# Comma-separated list of keys, e.g. "key1,key2"
APP_KEYS=your-app-key-1,your-app-key-2

# Admin panel security
ADMIN_JWT_SECRET=change-this-admin-jwt-secret
API_TOKEN_SALT=change-this-api-token-salt
TRANSFER_TOKEN_SALT=change-this-transfer-token-salt
ENCRYPTION_KEY=change-this-encryption-key

# Database configuration
DATABASE_CLIENT=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=strapi
DATABASE_URL=
DATABASE_SCHEMA=public
DATABASE_FILENAME=.tmp/data.db
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_CONNECTION_TIMEOUT=60000

# Database SSL (for production databases)
DATABASE_SSL=false

# Object storage (Cloudflare R2 / S3-compatible)
R2_PUBLIC_URL=
R2_ROOT_PATH=
R2_ACCESS_KEY_ID=
R2_ACCESS_SECRET=
R2_ENDPOINT=
R2_REGION=auto
R2_BUCKET=

# Optional admin flags (defaults: true)
# FLAG_NPS=true
# FLAG_PROMOTE_EE=true
